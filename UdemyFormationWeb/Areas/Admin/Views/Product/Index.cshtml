@model List<Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Create New Product
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Description
                </th>
                <th>
                    Price
                </th>
                <th>
                    Price10
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product Product in Model)
            {
                <tr>
                    <td>@Product.Title</td>
                    <td>@Product.Description</td>
                    <td>@Product.Price</td>
                    <td>@Product.Price10</td>

                    <td>
                        <div class="w-75 btn-group" role="group">

                            <a class="btn btn-primary mx-2" asp-controller="Product" asp-action="Edit" asp-route-id="@Product.Id">
                                <i class="bi bi-pencil-square"></i>
                                Edit
                            </a>
                            <a class="btn btn-delete mx-2 text-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@Product.Id">
                                <i class="bi bi-trash"></i>
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>