@model Product

<form method="post">
    <div class="border p-3 mt-4">

        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Title" class="p-0"></label>
            <input asp-for="Title" disabled />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-0"></label>
            <textarea asp-for="Description" disabled></textarea>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price" class="p-0"></label>
            <input asp-for="Price" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price10" class="p-0"></label>
            <input asp-for="Price10" disabled />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <a type="button" asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary" style="width:150px">
                    Go back to list
                </a>
            </div>
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-outline-danger" style="width:150px">
                    Delete
                </button>
            </div>
        </div>
    </div>
</form>