@model Product

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">

        <div class="row pb-2">
            <h2 class="text-primary">@(Model.Id == 0 ? "Create" : "Update") Product</h2>
            <hr />
        </div>

        <div asp-validation-summary="ModelOnly"></div>

        <div class="mb-3 row p-1">
            <label asp-for="Title" class="p-0"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-0"></label>
            <textarea class="form-control" asp-for="Description" id="mytextarea"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        @*         <div class="mb-3 row p-1">
        <label asp-for="Description" class="p-0"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
        </div> *@
        <div class="mb-3 row p-1">
            <label asp-for="Price" class="p-0"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Price10" class="p-0"></label>
            <input asp-for="Price10" class="form-control" />
            <span asp-validation-for="Price10" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category" class="p-0"></label>
            <select asp-for="CategoryId" asp-items=ViewBag.CategoriesDropdown class="form-control">
                <option selected disabled>--SelectCategory--</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ImagePath" class="p-0"></label>
            <input type="file" name="file" asp-for="ImagePath" class="form-control" />
        </div>
        <img src="@Model.ImagePath" width="100"
             style="border-radius:5px; border:1px solid #bbb9b9" />
        <div class="row">
            <div class="col-6 col-md-3">
                <a type="button" asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary" style="width:150px">
                    Go back to list
                </a>
            </div>
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-outline-primary" style="width:150px">
                    Create Product
                </button>
            </div>
        </div>
    </div>
</form>
@section Scripts
{
    <script src="https://cdn.tiny.cloud/1/hvk60nkforbe432y8jpx9f0g2j0eau7a5db1c37xhugzaq4u/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: '#mytextarea',
            plugins: [
                'anchor autolink charmap codesample emoticons  lists   table visualblocks wordcount',
            ],
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough |  align lineheight | numlist bullist indent outdent',
            forced_root_block: "",
            force_br_newlines: true,
            force_p_newlines: false
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}